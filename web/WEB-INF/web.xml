<?xml version="1.0" encoding="UTF-8"?>
<web-app version="3.1" xmlns="http://xmlns.jcp.org/xml/ns/javaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd">
    <context-param>
        <param-name>contextConfigLocation</param-name>
        <param-value>/WEB-INF/applicationContext.xml</param-value>
    </context-param>
    <context-param>
        <description>The relative path to the Project</description>
        <param-name>Url</param-name>
        <param-value>/WEB-INF/view/</param-value>
    </context-param>
    <listener>
        <listener-class>org.springframework.web.context.ContextLoaderListener</listener-class>
    </listener>
    <servlet>
        <servlet-name>dispatcher</servlet-name>
        <servlet-class>org.springframework.web.servlet.DispatcherServlet</servlet-class>
        <load-on-startup>2</load-on-startup>
    </servlet>
        <servlet>
        <servlet-name>LoginController</servlet-name>
        <servlet-class>controller.LoginController</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>AdminController</servlet-name>
        <servlet-class>controller.AdminController</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>StudentController</servlet-name>
        <servlet-class>controller.StudentController</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>dispatcher</servlet-name>
        <url-pattern>*.htm</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>LoginController</servlet-name>
        <url-pattern>/login</url-pattern>
        <url-pattern>/logout</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>AdminController</servlet-name>
        <url-pattern>/admin/dashboard</url-pattern>
        <url-pattern>/admin/addNewResource</url-pattern>
        <url-pattern>/admin/AllResources</url-pattern>
        <url-pattern>/admin/issuedRequests</url-pattern>
        <url-pattern>/admin/UpdateissuedResource</url-pattern>
        <url-pattern>/admin/checkAvailability</url-pattern>
        <url-pattern>/admin/issuedResources</url-pattern>
        <url-pattern>/admin/sendReminder</url-pattern>
        <url-pattern>/admin/requestedExtension</url-pattern>
        <url-pattern>/admin/requestedNewResource</url-pattern>
        <url-pattern>/admin/AllPenalities</url-pattern>
        <url-pattern>/admin/SendNewsLetters</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>StudentController</servlet-name>
        <url-pattern>/user/dashboard</url-pattern>
        <url-pattern>/user/allResources</url-pattern>
        <url-pattern>/user/borrowRequest</url-pattern>
        <url-pattern>/user/myRequests</url-pattern>
        <url-pattern>/user/remindersNewsletters</url-pattern>
        <url-pattern>/user/ReturnIssued</url-pattern>
        <url-pattern>/user/IssuedExtension</url-pattern>
        <url-pattern>/user/ExtensionRequests</url-pattern>
        <url-pattern>/user/RequestNewResource</url-pattern>
    </servlet-mapping>
    <session-config>
        <session-timeout>
            30
        </session-timeout>
    </session-config>
    <welcome-file-list>
        <welcome-file>/WEB-INF/view/login.jsp</welcome-file>
    </welcome-file-list>
    <jsp-config>
        <jsp-property-group>
            <url-pattern>/index.jsp</url-pattern>
            <url-pattern>/WEB-INF/view/*</url-pattern>
            <include-prelude>/WEB-INF/jspf/header.jspf</include-prelude>
            <include-coda>/WEB-INF/jspf/footer.jspf</include-coda>
        </jsp-property-group>
    </jsp-config>
</web-app>
